<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Stashy.io - Fast, custom RESTful endpoints for all your data</title>

  <%- include ./partials/meta_data %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="/static/css/bootstrap.min.css" rel="stylesheet">
    <!--==============GOOGLE FONT - OPEN SANS=================-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">

    <link href="/static/css/hosting.css" rel="stylesheet" media="all">

    <link href="/static/css/login_signup.css" rel="stylesheet" media="all">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
<![endif]-->

 <script src="/static/js/jquery.min.js"></script>

</head>
<body>
  <%- include ./partials/navbar %>

    <div class="container">
      <div class="card card-container">
        <img id="profile-img" class="profile-img-card" src="/static/img/logo-trans.png" />
        <% if ( messages.changePasswordMessage) { %>
          <div class="alert alert-danger">
            <%= messages.changePasswordMessage %>
          </div>
          <% } %>
            <form method="POST">
              <input type="password" id="password" name="password" class="form-control" placeholder="New password 1" required autofocus>
              <input type="password" id="password_confirm" name="password_confirm" class="form-control" placeholder="New password 2" required>
              <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Change</button>
            </form>
      </div>
    </div>

    <%- include ./partials/footer %>

    <script src="/static/js/bootstrap.min.js"></script>
</body>

</html>